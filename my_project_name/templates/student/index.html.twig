{% extends 'base.html.twig' %}

{% block title %}Student index{% endblock %}

{% block body %}
    <h1 style="text-align: center">Student index</h1>
    <a href="{{ path('student_new') }}"  class="btn btn-success">Create new</a>


    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Masv</th>
            <th>Name</th>
            <th>Age</th>
            <th>Country</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for student in students %}
            <tr>
                <td>{{ student.id }}</td>
                <td>{{ student.masv }}</td>
                <td>{{ student.name }}</td>
                <td>{{ student.age }}</td>
                <td>{{ student.country }}</td>
                <td>
                    <a href="{{ path('student_show', {'id': student.id}) }}" class="btn btn-info">show</a>
                    <a href="{{ path('student_edit', {'id': student.id}) }}" class="btn btn-warning">edit</a>
                    {{ include('student/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
